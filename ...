}

/* Эффект при активном нажатии на кнопку */
.button:active {
  background-color: #256cd6; /* Еще более темный оттенок при нажатии */
  transform: scale(1.05); /* Легкое уменьшение кнопки при нажатии */
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1); /* Уменьшенная тень при нажатии */
}

/* Кнопка с фокусом (если она активирована через клавиатуру) */
.button:focus {
  outline: none; /* Убираем стандартную рамку */
  box-shadow: 0 0 5px 2px rgba(38, 101, 255, 0.7); /* Светящийся эффект вокруг кнопки */
}

