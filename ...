/* Блоки контента */
.content-section {
  background: rgba(255, 255, 255, 0.651); /* Полупрозрачный белый фон */
  padding: 10px; /* Внутренние отступы для удобства чтения */
  margin: 10px auto; /* Отступы сверху и снизу, автоматическое выравнивание по центру */
  border-radius: 12px; /* Закругление углов блока */
  box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1); /* Легкая тень для блока */
  flex: 1; /* Этот блок будет растягиваться, занимая оставшееся пространство */
  max-width: 1300px; /* Максимальная ширина блока */
  background: linear-gradient(135deg, #ffffff 0%, #f4f4f4 100%); /* Градиентный фон блока */
  transition: all 0.3s ease; /* Плавные переходы для всех изменений */
}

